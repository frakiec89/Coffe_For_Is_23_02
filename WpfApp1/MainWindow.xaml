<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        FontSize="20"
        Title="Кофейня" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>


        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <Label Margin="5">Кофейная карта:</Label>
            <RadioButton x:Name="rbAmericano" Margin="5">Американо</RadioButton>
            <RadioButton x:Name="rbCapuchiino" Margin="5">Капучино</RadioButton>
            <RadioButton x:Name="rbLatte" Margin="5">Лате</RadioButton>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3">
            <Label Margin="5">Объем</Label>
            <RadioButton  x:Name="rb05" Margin="5">0.5</RadioButton>
            <RadioButton x:Name="rb03" Margin="5">0.3</RadioButton>
            <RadioButton x:Name="rb02" Margin="5">0.2</RadioButton>
        </StackPanel>

        <StackPanel Margin="0,25,0,0" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1">
           
            <CheckBox x:Name="checkBoxSahar" Margin="5">Сахар</CheckBox>
            <CheckBox x:Name="checkBoxKariza" Margin="5">Корица</CheckBox>
        </StackPanel>

        <Button
            x:Name="buttonCheck"
            Grid.Column="3" Grid.Row="3" Margin="25" Background="BlueViolet">Сделать заказ</Button>


    </Grid>
</Window>
